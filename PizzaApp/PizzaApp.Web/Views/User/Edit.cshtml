@model UserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<h2 class="fade-in">@ViewData["Title"]:</h2>

<div class="row fade-in">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="FirstName" class="custom-control-label"></label>
                <input type="text" asp-for="FirstName" class="form-control custom-input" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="custom-control-label"></label>
                <input type="text" asp-for="LastName" class="form-control custom-input" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="custom-control-label"></label>
                <input type="text" asp-for="Address" class="form-control custom-input" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <hr />
            <button type="submit" class="btn btn-outline-dark">Update User</button>
            <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
        </form>
    </div>
</div>