@model UserDetailsViewModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="fade-in">
    <h2 class="bounce">Are you sure you want to delete this user?</h2>

    <div class="card main-card">
        <div class="card-body">
            <h5 class="card-title"><label asp-for="FullName"></label>: <span class="card-subtitle mb-2 text-muted">@Model.FullName</span></h5>
            <h5 class="card-title"><label asp-for="Address"></label>: <span class="card-subtitle mb-2 text-muted">@Model.Address</span></h5>
        </div>
    </div>

    <br />
    <h4>Order List:</h4>
    <div>
        <a class="view-orders-link" asp-controller="User" asp-action="OrdersForUser" asp-route-userId="@ViewData["userId"]">View Orders</a>
    </div>

    <hr />
    <form asp-action="Delete" method="post" class="d-flex justify-content-center">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-lg mx-2 w-25">Delete</button>
        <a asp-action="Index" class="btn btn-success btn-lg mx-2 w-25">Cancel</a>
    </form>
</div>