@model PizzaViewModel
@{
    ViewData["Title"] = "Add Pizza";
}

<h2 class="fade-in">@ViewData["Title"]:</h2>

<div class="row fade-in">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name" class="custom-control-label"></label>
                <input type="text" asp-for="Name" class="form-control custom-input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PizzaSize" class="control-label"></label>
                <select class="form-control custom-input" asp-for="PizzaSize" asp-items="Html.GetEnumSelectList<PizzaSize>()"></select>
            </div>

            <br />
            <div class="form-group">
                <input type="checkbox" asp-for="IsOnPromotion" class="custom-checkbox" />
                <label asp-for="IsOnPromotion" class="control-label"></label>
            </div>

            <hr />
            <button type="submit" class="btn btn-outline-dark">Add Pizza</button>
            <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
        </form>
    </div>
</div>